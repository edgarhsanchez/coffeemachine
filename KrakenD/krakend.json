{
    "version": 2,
    "extra_config": {
      "github_com/devopsfaith/krakend-cors": {
        "allow_origins": [
          "*"
        ],
        "expose_headers": [
          "Content-Length"
        ],
        "max_age": "12h",
        "allow_methods": [
          "GET",
          "HEAD",
          "POST",
          "PUT",
          "DELETE",
          "CONNECT",
          "OPTIONS",
          "TRACE",
          "PATCH"
        ]
      }
    },
    "timeout": "60000ms",
    "cache_ttl": "300s",
    "output_encoding": "json",
    "name": "KrakenD API Gateway",
    "port": 8080,
    "endpoints": [
          {
            "endpoint": "/api/order",
            "method": "GET",
            "backend": [{
              "url_pattern": "/api/order",
              "sd": "dns",
              "host": [
                "api-catalog.service.consul.srv"
              ],
              "disable_host_sanitize": true
            }]
        },
        {
            "endpoint": "/api/order/{id}",
            "method": "GET",
            "backend": [{
              "url_pattern": "/api/order/{id}",
              "sd": "dns",
              "host": [
                "api-catalog.service.consul.srv"
              ],
              "disable_host_sanitize": true
            }]
        }
    ]
  }
  